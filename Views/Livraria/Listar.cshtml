<table id="tableLivros" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Titulo
            </th>
            <th>
                Autor
            </th>
            <th class="min-size">Remover</th>
            <th class="min-size">Editar</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: livros">
        <tr>
            <td data-bind="text: id"></td>
            <td data-bind="text: titulo"></td>
            <td data-bind="text: autor"></td>
            <td class="min-size">
                <button data-bind="click: $root.removerLivroClick" class="btn btn-danger">
                    Remover
                </button>
            </td>
            <th class="min-size">
                <button data-bind="click: $root.editarLivroClick" class="btn btn-primary">
                    Editar
                </button>
            </th>
        </tr>
    </tbody>
</table>

@section Scripts {
    <script src="~/js/Livraria/listarViewModel.js"></script>
}